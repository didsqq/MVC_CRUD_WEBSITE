
@model IEnumerable<PP_5.Models.Order>
@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.FIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product_Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_Amount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.FIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Amount)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.OrderID })
                @Html.ActionLink("Order", "Order", new { id = item.OrderID })
            </td>
        </tr>
    }

</table>